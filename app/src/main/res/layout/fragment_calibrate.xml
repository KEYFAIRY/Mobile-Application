<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray"
    tools:context=".feature_calibrate.presentation.CalibrateFragment">

    <!-- Vista previa de cámara -->
    <TextureView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Overlay de título e instrucciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:background="@color/background_gray">

            <TextView
                android:id="@+id/text_calibration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calibración de cámara"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/light_blue">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/num1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="1"
                            android:textSize="16sp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/dark_blue"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instrucciones_calibracion_1"
                            android:textSize="16sp"
                            android:layout_toEndOf="@+id/num1"
                            android:textColor="@color/dark_blue" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/instruccion_calibracion_1"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/light_red">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/num2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="2"
                            android:textSize="16sp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/dark_red"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instrucciones_calibracion_2"
                            android:textSize="16sp"
                            android:layout_toEndOf="@+id/num2"
                            android:textColor="@color/dark_red" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/instruccion_calibracion_2"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/light_brown">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/num3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="3"
                            android:textSize="16sp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/dark_brown"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instrucciones_calibracion_3"
                            android:textSize="16sp"
                            android:layout_toEndOf="@+id/num3"
                            android:textColor="@color/dark_brown" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/piano_calibration_result_example"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/button_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:background="@drawable/rounded_button_background"
                app:backgroundTint="@color/light_blue"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
