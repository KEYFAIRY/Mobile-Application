<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".feature_auth.presentation.fragment.SignUpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Logo con menos margen superior -->
            <ImageView
                android:id="@+id/logo_placeholder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/keyfairy_logo"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regístrate en Keyfairy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="32dp" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/label_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:hint="Ingresa tu nombre completo"
                android:layout_marginBottom="20dp" />

            <!-- Correo -->
            <TextView
                android:id="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:hint="ejemplo@correo.com"
                android:layout_marginBottom="20dp" />

            <!-- Nivel de piano con Spinner -->
            <TextView
                android:id="@+id/label_piano_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel de piano"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_piano_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:layout_marginBottom="20dp" />

            <!-- Contraseña -->
            <TextView
                android:id="@+id/label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:inputType="textPassword"
                android:hint="Mínimo 6 caracteres"
                android:layout_marginBottom="32dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Botón -->
            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/white"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Link para volver al login -->
            <TextView
                android:id="@+id/tv_login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? Inicia sesión"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>