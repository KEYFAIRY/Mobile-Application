<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icono de estado -->
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/upload_cloud_blue"
            android:layout_marginEnd="12dp"/>

        <!-- Informaci贸n del video -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scale_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escala Do Mayor"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"/>

            <TextView
                android:id="@+id/upload_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esperando conexi贸n..."
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/video_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-10-2 , 12:00:00"
                android:textSize="11sp"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/piano_brown"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/practice_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 BPM - 5 Octavas"
                    android:textSize="11sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <!-- Bot贸n de acci贸n -->
        <Button
            android:id="@+id/action_button"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:contentDescription="Cancelar upload"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>