<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".feature_practice.presentation.MusicalErrorFragment">

    <!-- Título arriba -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Errores Musicales"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo debajo del título -->
    <TextView
        android:id="@+id/textView_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí verás un informe con los errores musicales detectados en tu interpretación."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagen ilustrativa -->
    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/loading_wheel"
        android:contentDescription="Logo"
        app:layout_constraintTop_toBottomOf="@id/textView_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Comentarios debajo de la imagen -->
    <TextView
        android:id="@+id/textView_comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí verás los comentarios de los errores musicales detectados en tu interpretación."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Siguiente Error -->
    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente Error Musical"
        app:layout_constraintTop_toBottomOf="@id/textView_comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón Errores Posturales -->
    <Button
        android:id="@+id/button_postural_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Errores Posturales"
        app:layout_constraintTop_toBottomOf="@id/button_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Botón Finalizar práctica -->
    <Button
        android:id="@+id/button_end_practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar Práctica"
        app:layout_constraintTop_toBottomOf="@id/button_postural_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
