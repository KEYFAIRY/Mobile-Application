<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <!-- Botón Cerrar Sesión -->
            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logout"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:adjustViewBounds="true"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imgPersonal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/profile_red"
                    app:tint="@color/dark_blue">
                </ImageView>

                <!-- Nivel de Piano (Editable con Spinner) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Datos personales"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/imgPersonal"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/light_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <!-- Nombre (Solo lectura) -->
                    <TextView
                        android:id="@+id/tv_name_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:backgroundTint="@color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp"
                        android:text="Cargando..."
                        android:drawablePadding="8dp"/>

                    <!-- Email (Solo lectura) -->
                    <TextView
                        android:id="@+id/tv_email_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_edittext_background"
                        android:padding="16dp"
                        android:text="Cargando..."
                        android:drawablePadding="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/piano_brown">
                </ImageView>

                <!-- Nivel de Piano (Editable con Spinner) -->
                <TextView
                    android:id="@+id/tv_level_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nivel de piano"
                    android:textStyle="bold"
                    android:textColor="@color/dark_brown"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img"
                    />
            </RelativeLayout>


            <Spinner
                android:id="@+id/spinner_piano_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_brown"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp"/>

            <!-- Progress Bar para loading -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- Botón Guardar Cambios -->
            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Actualizar nivel de piano"
                android:background="@drawable/rounded_button_background"
                app:backgroundTint="@color/dark_brown"
                android:textColor="@color/white"
                android:enabled="false"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>